<section class="grid-item-main bg-secondary bg-gradient px-3 py-3">
    <h3 class="text-white mb-3">Search Here</h3>

    <div class="d-flex flex-column flex-md-row align-items-left align-items-md-center">
        <h5 class="text-white mb-3 mb-md-0 font-small ml-md-2">Filter by Language</h5>
        <a class="btn btn-secondary font-small my-1 mx-md-2" href="/search?language=English">English</a>
        <a class="btn btn-secondary font-small my-1 mx-md-2" href="/search?language=Korean">Korean</a>
    </div>

    <form id="searchForm" class="input-group rounded mb-5 mt-3">
        <input type="search" class="form-control rounded border-round-left" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="search" id="search" />
        <input type="submit" class="btn btn-success" value="search" />
    </form>

    <div class="grid card-template mb-5">
        <% allSongs.forEach(({ _id, artists, name, picture }) => { %>
        <%- include("card.ejs", { id:_id, picture:picture, name:name, artists:artists}) %>
        <% }) %>
    </div>

    <%- include("company.ejs") %>
</section>